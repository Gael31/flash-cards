{
    "name": "Flash cards",
    "version": "1.0",
    "description": "Chrome flash cards",
    "permissions": ["declarativeContent", "storage", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "data/*.json"
    ],
    "manifest_version": 2
  }